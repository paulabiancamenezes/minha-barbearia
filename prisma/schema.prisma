generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Status {
  Aguardando
  Confirmado
  Recusado
}

model Agendamento {
  id              Int      @id @default(autoincrement())
  nome            String
  email           String   @unique
  telefone        String
  servicoDesejado String
  dataHora        DateTime
  status          Status   @default(Aguardando)
}

model Usuario {
  id              Int       @id @default(autoincrement())
  cpf             String    @unique
  nome            String
  email           String    @unique
  telefone        String
  senha           String
}